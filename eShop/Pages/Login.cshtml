@page
@model eShop.Pages.LoginModel
@{
}

<div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-8 col-lg-7 col-xl-6">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                 class="img-fluid" alt="Phone image">
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
            <h1>Welcome!</h1>
            <h3 class="text-muted mb-5">Please log in to continue</h3>
            <form method="post">
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form1Example13">Email address</label>
                    <input asp-for="Email" type="email" id="form1Example13" class="form-control form-control-lg" required />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form1Example23">Password</label>
                    <input type="password" id="form1Example23" class="form-control form-control-lg" />
                </div>

                @if (!Model.UserFound)
                {
                    <p class="alert-warning">No user with that email was found.</p>
                }

                <a href="/signup">Register here</a><br>
                <!-- Submit button -->
                <input type="submit" class="btn btn-primary btn-lg btn-block mt-2" value="Log in" />
            </form>
        </div>
    </div>
</div>