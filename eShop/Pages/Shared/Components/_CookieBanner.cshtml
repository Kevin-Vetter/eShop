@{
    if (Context.Request.Cookies["useCookies"] != "true")
    {
        <div class="modal-frame modal-bottom fixed-bottom" id="cookieBanner">
            <div class="modal-body py-1">
                <div class="d-flex justify-content-center align-items-center my-3">
                    <p class="mb-0 px-2">We use functional cookies to improve your website experience</p>
                    <button type="button" onClick="AcceptCookies()" class="btn btn-primary btn-sm ms-2" data-mdb-dismiss="modal">Accept</button>
                    <button type="button" onClick="RejectCookies()" class="btn btn-outline-primary btn-sm ms-2">Reject</button>
                </div>
            </div>
        </div>

        <script>
            function AcceptCookies() {
                document.getElementById('cookieBanner').style.display = 'none';
                document.cookie = "useCookies=true";
            }

            function RejectCookies() {
                location.href = 'https://google.com';
            }
        </script>
    }
}